<div>
  <h2>Signup</h2>
  <form action="/signup" method="POST">
    <label for="email">email</label>
    <input type="email" name="email" required />
    <label for="password">password</label>
    <input type="password" name="password" />
    <button type="submit">signup</button>
  </form>

  {{#if err}}
    <p>{{err}}</p>
  {{/if}}
</div>

<div>
  <a href="/">back</a>
</div>