<div>
  <h2>Login</h2>
  <form action="/login" method="POST">
    <label for="email">email</label>
    <input type="email" name="email" required />
    <label for="password">password</label>
    <input type="password" name="password" />
    <button type="submit">login</button>
  </form>

  {{#if err}}
    <p>{{err}}</p>
  {{/if}}
</div>
<div>
  <a href="/">back</a>
</div>